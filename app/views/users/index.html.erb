<h1 align="center">All Alpha-Bloggers</h1>

<div align="center">
  <div align="center">
    <%= will_paginate %>
  </div>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username.capitalize, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
           <li><%= link_to "Delete user account", user_path(user), method: :delete,
                                        data: {confirm: "Are you sure you want to delete the account?"},
                                        class: "btn btn-xs btn-danger" %>
           </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <div align="center">
    <%= will_paginate %>
  </div>
</div>
